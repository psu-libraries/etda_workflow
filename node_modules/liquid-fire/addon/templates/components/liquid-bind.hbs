{{#if containerless}}
  {{~#liquid-versions value=value use=use rules=rules
                     matchContext=forwardMatchContext
                     versionEquality=versionEquality
                     renderWhenFalse=true class=class as |version| ~}}
    {{~#if hasBlock}}
      {{~yield version ~}}
    {{else}}
      {{~version ~}}
    {{/if~}}

{{/liquid-versions ~}}
{{else}}
  {{~#liquid-container
      id=containerId
      class=class
      growDuration=growDuration
      growPixelsPerSecond=growPixelsPerSecond
      growEasing=growEasing
      shrinkDelay=shrinkDelay
      growDelay=growDelay
      enableGrowth=enableGrowth
      as |container| ~}}
    {{~#liquid-versions value=value notify=container use=use rules=rules
                       matchContext=forwardMatchContext
                       versionEquality=versionEquality
                       renderWhenFalse=true as |version| ~}}

      {{~#if hasBlock}}
        {{~yield version ~}}
      {{else}}
        {{~version ~}}
      {{/if~}}

    {{/liquid-versions ~}}
  {{/liquid-container ~}}
{{/if}}
