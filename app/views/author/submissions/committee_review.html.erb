<div class="row">
  <div class="col-xs-12">
    <h1>Committee Members</h1>
  </div>
</div>
<div class="row">
  <table id="committee_member_table" class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Notes</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @submission.committee_members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.status %></td>
        <td><%= member.notes %></td>
        <td><%= button_to 'Send Email Reminder', { controller: author_submissions_path, action: "send_email_reminder", committee_member_id: member.id }, method: :post, disabled: @submission.status_behavior.beyond_waiting_for_final_submission_response? %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="row" >
    <div class="col-xs-12 review-group">
      <p><strong>
        <%= link_to 'Return to dashboard', author_root_path %>
      </strong></p>
    </div>
  </div>
</div>