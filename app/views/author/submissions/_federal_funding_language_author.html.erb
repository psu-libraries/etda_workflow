<div tabindex="0">
    <br>
    <strong>Federal Funding Statement</strong>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_1").html_safe %></p>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_2").html_safe %></p>
    <ol>
        <li><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_2_1").html_safe %></li>
        <li><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_2_2").html_safe %></li>
    </ol>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_3").html_safe %></p>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_4").html_safe %></p>
    <ol>
        <li><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_4_1").html_safe %></li>
        <li><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_4_2").html_safe %></li>
        <li><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_4_3").html_safe %></li>
    </ol>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_5").html_safe %></p>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_6").html_safe %></p>
    <%= simple_fields_for :federal_funding_author do |g| %>
        <%= g.label :training_support_used, I18n.t("#{current_partner.id}.federal_funding_author.question_1").html_safe %>
        <%= g.label :training_support_used, 'Yes'%>
        <%= g.radio_button :training_support_used, true %><br>
        <div id="fed_funding_confirmation_author_1" class="ml-3 collapse hide">
            <p><%= I18n.t("#{current_partner.id}.federal_funding_author.confirmation").html_safe%></p>
            <%= g.label :training_confirmation, 'Yes'%>
            <%= g.radio_button :training_confirmation, true %><br>
            <%= g.label :training_confirmation, 'No'%>
            <%= g.radio_button :training_confirmation, false %>
            <p id="fed_funding_error_message_author_1" class="collapse hide"><%= I18n.t("#{current_partner.id}.federal_funding_author.error_message").html_safe%></p>
        </div>
        <%= g.label :training_support_used, 'No'%>
        <%= g.radio_button :training_support_used, false %>
        <br>
        <%= g.label :other_funds_used, I18n.t("#{current_partner.id}.federal_funding_author.question_2").html_safe %><br>
        <%= g.label :other_funds_used, 'Yes'%>
        <%= g.radio_button :other_funds_used, true %><br>
        <div id="fed_funding_confirmation_author_2" class="ml-3 collapse hide">
            <p><%= I18n.t("#{current_partner.id}.federal_funding_author.confirmation").html_safe %></p>
            <%= g.label :other_funds_confirmation, 'Yes'%>
            <%= g.radio_button :other_funds_confirmation, true %><br>
            <%= g.label :other_funds_confirmation, 'No'%>
            <%= g.radio_button :other_funds_confirmation, false %>
        </div>
        <%= g.label :other_funds_used, 'No'%>
        <%= g.radio_button :other_funds_used, false %>
        <p id="fed_funding_error_message_author_2" class="collapse hide"><%= I18n.t("#{current_partner.id}.federal_funding_author.error_message").html_safe%></p>
    <% end %>
    </div>
    