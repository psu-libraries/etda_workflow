        </div>
        <%= g.label :test_1, 'No'%>
        <%= g.radio_button :test_1, false %>

        <%= g.label :test_2, I18n.t("#{current_partner.id}.federal_funding_author.question_2").html_safe %>
        <%= g.label :test_2, 'Yes'%>
        <%= g.radio_button :test_2, true %><br>
        <div class="ml-3">
            <p><%= I18n.t("#{current_partner.id}.federal_funding_author.confirmation").html_safe %></p>
            <%= g.label :test_2_1, 'Yes'%>
            <%= g.radio_button :test_2_1, true %><br>
            <%= g.label :test_2_1, 'No'%>
            <%= g.radio_button :test_2_1, false %>
        </div>
        <%= g.label :test_1, 'No'%>
        <%= g.radio_button :test_2, false %>
    <% end %>
