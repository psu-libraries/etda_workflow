    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_5").html_safe %></p>
    <p><%= I18n.t("#{current_partner.id}.federal_funding_author.intro_6").html_safe %></p>
    <%= simple_fields_for :federal_funding do |g| %>
        <%= g.label :test_1, I18n.t("#{current_partner.id}.federal_funding_author.question_1").html_safe %>
        <%= g.label :test_1, 'Yes'%>
        <%= g.radio_button :test_1, true %><br>
        <div class="ml-3">
            <p><%= I18n.t("#{current_partner.id}.federal_funding_author.confirmation").html_safe%></p>
            <%= g.label :test_1_1, 'Yes'%>
            <%= g.radio_button :test_1_1, true %><br>
            <%= g.label :test_1, 'No'%>
            <%= g.radio_button :test_1_1, false %>
