<div class="nested-fields">
  <% if file_fields.object.asset_identifier %>
    <div id="<%= file_fields.object.class_name %>-<%= file_fields.object.id %>" class="form-group uploaded-file-link <%= can_delete ? 'can-delete' : 'cannot-delete' %> ">
        <%= link_to_remove_association "[delete]", file_fields, class: 'text-danger can-toggle-clickability'  %>
            <%= link_to file_fields.object, class: 'file-link', target: '_blank' do %>
                <%= file_fields.object.asset_identifier %>
                <span class="badge pull-right">Uploaded <%= l file_fields.object.created_at, format: t("#{current_partner.id}.time.formats.medium") %></span>
            <% end %>
      </div>
  <% else %>
      <%= file_fields.input :asset, as: :file, label: false %>
      <%= file_fields.input :asset_cache, :as => :hidden %>
      <%= file_fields.object.asset_identifier %>
      <%= link_to_remove_association "[remove]", file_fields, class: 'text-danger can-toggle-clickability' %>
  <% end %>
</div>

