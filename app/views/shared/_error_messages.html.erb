<% if object.errors.any? %>
  <div class="row">
    <div class="col-xs-12">
      <div class="alert alert-danger" role="alert" aria-labelledby="alert-message">
        <ul>
          <% for message in object.errors.values %>
            <li><%= message.first %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
