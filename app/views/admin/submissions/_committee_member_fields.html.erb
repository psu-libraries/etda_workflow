<div class="nested-fields admin panel panel-default committee-member-information">
  <div class="status-row">
    <% if f.object.is_required == true && f.object.committee_role.name == 'Program Head/Chair' %>
      <div class="col-sm-6">
        <%= f.association :committee_role, disabled: true %>
      </div>
    <% else %>
      <div class="col-sm-6">
        <%= f.association :committee_role, collection: @submission.degree_type.try(&:committee_roles).where.not(name: 'Program Head/Chair').order('name asc') || [] , input_html: {class: 'role'} %>
      </div>
    <% end %>
    <%= link_to_remove_association "[ Remove Committee Member ]", f, class: 'text-danger remove-member'%>
  </div>
  <div class="row committee-details">
    <%= f.input :name, input_html: { class: 'ldap-lookup' } %>
    <%= f.input :email %>
    <div class="status-row">
      <%= f.input :status, collection: CommitteeMember::STATUS, include_blank: true, input_html: { class: "select-status" } %>
      <% if SubmissionStatus.new(@submission).waiting_for_committee_review? %>
        <button type="button" id="send_email_reminder" value="<%= f.object.id.to_s %>">Send Email Reminder</button>
      <% end %>
    </div>
    <%= f.input :notes %>
    <%= f.input :federal_funding_used, input_html: { class: "funding-box" } if current_partner.graduate? %>
    <% unless f.object.is_required == true && f.object.committee_role.name == 'Program Head/Chair'  %>
    <div class="status-row">
      <%= f.input :is_voting, as: :radio_buttons,
                  collection: [['Yes', true], ['No', false]],
                  wrapper: :vertical_radio_and_checkboxes,
                  label: 'Is voting on approval'.html_safe %>
    </div>
    <% end %>
  </div>
</div>
