<%= render 'admin/submissions/edit/form_section_header', target: 'committee' %>
<div id="committee" <%= @view.form_section_body('committee') %>>
  <%= f.simple_fields_for :committee_members do |cmf, index| %>
      <%= render partial: 'admin/submissions/committee_member_fields', locals: { f: cmf } %>
  <% end %>
  <div id="add_member">
  </div>
  <div>
    <%= link_to_add_association "Add Committee Member", f, :committee_members,
                                partial: 'author/committee_members/committee_member_fields',
                                class: 'btn btn-success',
                                data: { association_insertion_node: '#add_member', association_insertion_method: 'append' } %>
  </div>
  <br>
  <% if @submission.committee_members.with_discarded.discarded.any? %>
        <p><strong>Removed Committee Members:</strong></p>
        <% @submission.committee_members.with_discarded.discarded.each do |cm| %>
          <p><%= cm.name %> (<%= cm.committee_role.try(:name) || 'No Role Assigned' %>) email: <%= cm.email %> - Discarded at <%= cm.discarded_at.strftime("%B %d, %Y %I:%M %p") %></p>
          <ul>
            <% if cm.notes.present? %>
              <li>Notes: <%= cm.notes %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
      <br>
</div>
