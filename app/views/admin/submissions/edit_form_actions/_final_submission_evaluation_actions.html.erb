<%= f.button :submit, name: 'approved', class: "btn btn-success", value: "Approve Final Submission", title: "Proceed to '#{t("#{current_partner.id}.admin_filters.final_submission_approved.title")}'", data: {confirm: "Are you sure you want to approve?", toggle:"tooltip", placement:"top" } %>
<%= f.button :submit, name: 'rejected', class: "btn btn-danger", value: "Reject & request revisions", title: "Mark as '#{t("#{current_partner.id}.admin_filters.final_submission_incomplete.title")}'", data: {confirm: "Are you sure you want to reject?", toggle:"tooltip", placement:"top" } %>
<%= f.button :submit, name: 'rejected_committee', class: "btn btn-warning", value: "Send to committee", title: "Mark as '#{t("#{current_partner.id}.admin_filters.final_submission_pending.title")}'", data: {confirm: "#{t("text.rejected_committee_message")}", toggle:"tooltip", placement:"top" } %>
<%= f.button :submit, name: 'rejected_dept_head', class: "btn btn-warning", value: "Send to program head", title: "Mark as '#{t("#{current_partner.id}.admin_filters.final_submission_pending.title")}'", data: {confirm: "#{t("text.rejected_dept_head_message")}", toggle:"tooltip", placement:"top" } %>
<%= f.button :submit, name: 'update_final', class: "btn btn-primary", value: "Update Metadata Only", title: "Remain at '#{t("#{current_partner.id}.admin_filters.final_submission_submitted.title")}'", data: {toggle:"tooltip", placement:"top" } %>
